<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- ✅ Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/site-custom.css" rel="stylesheet" />

</head>

<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-3">
                <h4 class="fw-bold text-accent">Admin Panel</h4>
            </div>
            <div class="list-group list-group-flush">
                <!-- Dashboard -->
                <a href="@Url.Action("AdminDashboard", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>

                <!-- Manage Users -->
                <a href="@Url.Action("ManageUsers", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "ManageUsers" ? "active" : "")">
                    <i class="bi bi-people me-2"></i> Manage Users
                </a>

                <!-- Manage Equipment -->
                <a href="@Url.Action("ManageEquipment", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "ManageEquipment" ? "active" : "")">
                    <i class="bi bi-laptop me-2"></i> Manage Equipment
                </a>

                <!-- Equipment List -->
                <a href="@Url.Action("EquipmentList", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "EquipmentList" ? "active" : "")">
                    <i class="bi bi-box-seam me-2"></i> Equipment List
                </a>

                <!-- Reports -->
                <a href="@Url.Action("Reports", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "Reports" ? "active" : "")">
                    <i class="bi bi-bar-chart-line me-2"></i> Reports
                </a>

                <!-- Admin Profile -->
                <a href="@Url.Action("AdminProfile", "Admin")"
                   class="list-group-item list-group-item-action @(ViewData["ActivePage"] as string == "AdminProfile" ? "active" : "")">
                    <i class="bi bi-person-circle me-2"></i> Profile
                </a>

                <!-- Logout -->
                <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-dark gradient-navbar shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-accent" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <h5 class="ms-3 my-2 text-white">Welcome, Admin!</h5>
                </div>
            </nav>

            <div class="container-fluid px-4 mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Sidebar Toggle
        const menuToggle = document.getElementById('menu-toggle');
        const wrapper = document.getElementById('wrapper');
        menuToggle.addEventListener('click', () => {
            wrapper.classList.toggle('toggled');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
