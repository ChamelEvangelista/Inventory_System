@model IEnumerable<Inventory_System.Models.Equipment>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Borrow Equipment";

    var userType = Context.Session.GetString("UserType");
    var userName = Context.Session.GetString("Username");

    var categories = Model?.Select(e => e.Category).Distinct().OrderBy(c => c).ToList() ?? new List<string>();
    var types = Model?.Select(e => e.Type).Distinct().OrderBy(t => t).ToList() ?? new List<string>();
}

<div class="container-fluid py-4">

    <!-- Page Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-dark">Borrow Equipment</h2>
        <p class="text-muted mb-0">
            @if (userType == "Instructor")
            {
                <span>You can borrow up to <strong class="text-primary">3 equipment items</strong> at a time.</span>
            }
            else
            {
                <span>You can borrow <strong class="text-primary">1 equipment item</strong> at a time.</span>
            }
        </p>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0 rounded-3">
        <div class="card-body py-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-secondary">Filter by Category</label>
                    <select id="categoryFilter" class="form-select shadow-sm">
                        <option value="">All Categories</option>
                        @foreach (var cat in categories)
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold text-secondary">Filter by Type</label>
                    <select id="typeFilter" class="form-select shadow-sm">
                        <option value="">All Types</option>
                        @foreach (var typ in types)
                        {
                            <option value="@typ">@typ</option>
                        }
                    </select>
                </div>

                <div class="col-md-4 d-flex align-items-end justify-content-end">
                    <button id="resetFilters" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Equipment Table -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">

            <h5 class="fw-bold text-dark mb-3 d-flex align-items-center">
                <i class="bi bi-laptop me-2 text-primary"></i> Available Equipment
            </h5>

            <div class="table-responsive">
                <table class="table align-middle table-hover text-center">
                    <thead class="table-light" style="background:#e9f0fa;">
                        <tr class="fw-semibold text-secondary">
                            <th>Label</th>
                            <th>Equipment Name</th>
                            <th>Category</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Available Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody id="equipmentTableBody">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr data-category="@item.Category"
                                    data-type="@item.Type"
                                    data-equipmentid="@item.EquipmentID"
                                    data-label="@item.Label"
                                    data-name="@item.Name"
                                    data-description="@item.Description"
                                    data-categoryname="@item.Category"
                                    data-typeitem="@item.Type"
                                    data-quantity="@item.Quantity">

                                    <td>@item.Label</td>
                                    <td class="fw-semibold">@item.Name</td>
                                    <td>@item.Category</td>
                                    <td>@item.Type</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <span class="badge bg-primary">@item.Quantity</span>
                                    </td>

                                    <td>
                                        @if (item.Quantity > 0)
                                        {
                                            <button class="btn btn-primary-custom btn-sm borrowBtn px-3"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#borrowModal">
                                                Borrow
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm px-3" disabled>Unavailable</button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted py-3">No equipment available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- Borrow Modal -->
<div class="modal fade" id="borrowModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title fw-bold">Borrow Equipment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="SubmitBorrowRequest" asp-controller="User" method="post">
                <div class="modal-body">

                    <input type="hidden" name="EquipmentID" id="modalEquipmentID" />

                    <!-- Readonly items -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Label</label>
                            <input type="text" class="form-control" id="modalLabel" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Equipment Name</label>
                            <input type="text" class="form-control" id="modalName" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Category</label>
                            <input type="text" class="form-control" id="modalCategory" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Type</label>
                            <input type="text" class="form-control" id="modalType" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Available Quantity</label>
                            <input type="text" class="form-control" id="modalQuantity" readonly />
                        </div>

                        <!-- Borrow Input Fields -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Quantity to Borrow</label>
                            <input type="number" class="form-control" name="Quantity" id="modalBorrowQuantity" min="1" required />
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Purpose</label>
                            <textarea class="form-control" name="Purpose" rows="2" required
                                      placeholder="Enter your purpose..."></textarea>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold">Expected Return Date</label>
                            <input type="date" class="form-control" name="ExpectedReturnDate" required />
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Submit Request</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const rows = document.querySelectorAll("#equipmentTableBody tr");
        const modalEquipmentID = document.getElementById("modalEquipmentID");
        const modalLabel = document.getElementById("modalLabel");
        const modalName = document.getElementById("modalName");
        const modalCategory = document.getElementById("modalCategory");
        const modalType = document.getElementById("modalType");
        const modalQuantity = document.getElementById("modalQuantity");
        const modalBorrowQuantity = document.getElementById("modalBorrowQuantity");

        document.querySelectorAll(".borrowBtn").forEach(btn => {
            btn.addEventListener("click", function () {
                const row = this.closest("tr");
                modalEquipmentID.value = row.dataset.equipmentid;
                modalLabel.value = row.dataset.label;
                modalName.value = row.dataset.name;
                modalCategory.value = row.dataset.categoryname;
                modalType.value = row.dataset.typeitem;
                modalQuantity.value = row.dataset.quantity;
                modalBorrowQuantity.max = row.dataset.quantity;
                modalBorrowQuantity.value = 1;
            });
        });

        document.getElementById("categoryFilter").addEventListener("change", applyFilters);
        document.getElementById("typeFilter").addEventListener("change", applyFilters);
        document.getElementById("resetFilters").addEventListener("click", () => {
            document.getElementById("categoryFilter").value = "";
            document.getElementById("typeFilter").value = "";
            applyFilters();
        });

        function applyFilters() {
            const cat = document.getElementById("categoryFilter").value.toLowerCase();
            const typ = document.getElementById("typeFilter").value.toLowerCase();

            rows.forEach(row => {
                const rc = row.dataset.category.toLowerCase();
                const rt = row.dataset.type.toLowerCase();
                row.style.display = (
                    (!cat || rc === cat) &&
                    (!typ || rt === typ)
                ) ? "" : "none";
            });
        }
    </script>
}
