@model IEnumerable<Inventory_System.Models.Equipment>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Borrow Equipment";

    var userType = Context.Session.GetString("UserType");
    var userName = Context.Session.GetString("Username");
    var types = Model?.Select(e => e.Type).Distinct().OrderBy(t => t).ToList() ?? new List<string>();
}

<div class="container-fluid py-4">

    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-2">Borrow Equipment</h2>
        <p class="text-muted mb-0">
            @if (userType == "Instructor")
            {
                <span>You can borrow up to <strong class="text-primary">3 equipment items</strong> at a time.</span>
            }
            else
            {
                <span>You can borrow <strong class="text-primary">1 equipment item</strong> at a time.</span>
            }
        </p>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body py-3">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-semibold text-secondary small mb-1">Filter by Type</label>
                    <select id="typeFilter" class="form-select form-select-sm">
                        <option value="">All Types</option>
                        @foreach (var typ in types)
                        {
                            <option value="@typ">@typ</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <button id="resetFilters" class="btn btn-outline-secondary btn-sm w-100">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Reset Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Equipment Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <h5 class="fw-semibold text-dark mb-3">
                <i class="bi bi-laptop me-2 text-primary"></i> Available Equipment
            </h5>

            <div class="table-responsive">
                <table class="table align-middle table-hover">
                    <thead class="table-light">
                        <tr class="text-secondary small">
                            <th>Label</th>
                            <th>Equipment Name</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th class="text-center">Available</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody id="equipmentTableBody">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr ="@item.Type"
                                    data-equipmentid="@item.EquipmentID"
                                    data-label="@item.Label"
                                    data-name="@item.Name"
                                    data-description="@item.Description"
                                    data-typeitem="@item.Type"
                                    data-quantity="@item.Quantity">

                                    <td class="small">@item.Label</td>
                                    <td class="fw-semibold">@item.Name</td>
                                    <td class="small">@item.Type</td>
                                    <td class="small text-muted">@item.Description</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary rounded-pill">@item.Quantity</span>
                                    </td>

                                    <td class="text-center">
                                        @if (item.Quantity > 0)
                                        {
                                            <button class="btn btn-primary btn-sm borrowBtn"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#borrowModal"
                                                    style="min-width: 80px;">
                                                <i class="bi bi-box-arrow-right me-1"></i>Borrow
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled style="min-width: 80px;">
                                                Unavailable
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-muted text-center py-4">No equipment available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- Borrow Modal -->
<div class="modal fade" id="borrowModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light">
                <h5 class="modal-title fw-semibold">
                    <i class="bi bi-box-arrow-right me-2 text-primary"></i>Borrow Equipment
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="SubmitBorrowRequest" asp-controller="User" method="post">
                <div class="modal-body">

                    <input type="hidden" name="EquipmentID" id="modalEquipmentID" />

                    <!-- Readonly items -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold small">Label</label>
                            <input type="text" class="form-control form-control-sm" id="modalLabel" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold small">Equipment Name</label>
                            <input type="text" class="form-control form-control-sm" id="modalName" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold small">Type</label>
                            <input type="text" class="form-control form-control-sm" id="modalType" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold small">Available Quantity</label>
                            <input type="text" class="form-control form-control-sm" id="modalQuantity" readonly />
                        </div>

                        <!-- Borrow Input Fields -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold small">Quantity to Borrow</label>
                            <input type="number" class="form-control form-control-sm" name="Quantity" id="modalBorrowQuantity" min="1" required />
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold small">Purpose</label>
                            <textarea class="form-control form-control-sm" name="Purpose" rows="2" required
                                      placeholder="Enter your purpose..."></textarea>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-semibold small">Expected Return Date</label>
                            <input type="date" class="form-control form-control-sm" name="ExpectedReturnDate" required />
                        </div>
                    </div>

                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check-circle me-1"></i>Submit Request
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const rows = document.querySelectorAll("#equipmentTableBody tr");
        const modalEquipmentID = document.getElementById("modalEquipmentID");
        const modalLabel = document.getElementById("modalLabel");
        const modalName = document.getElementById("modalName");
        const modalType = document.getElementById("modalType");
        const modalQuantity = document.getElementById("modalQuantity");
        const modalBorrowQuantity = document.getElementById("modalBorrowQuantity");

        document.querySelectorAll(".borrowBtn").forEach(btn => {
            btn.addEventListener("click", function () {
                const row = this.closest("tr");
                modalEquipmentID.value = row.dataset.equipmentid;
                modalLabel.value = row.dataset.label;
                modalName.value = row.dataset.name;
                modalType.value = row.dataset.typeitem;
                modalQuantity.value = row.dataset.quantity;
                modalBorrowQuantity.max = row.dataset.quantity;
                modalBorrowQuantity.value = 1;
            });
        });

        document.getElementById("typeFilter").addEventListener("change", applyFilters);
        document.getElementById("resetFilters").addEventListener("click", () => {
            document.getElementById("categoryFilter").value = "";
            document.getElementById("typeFilter").value = "";
            applyFilters();
        });

        function applyFilters() {
            const typ = document.getElementById("typeFilter").value.toLowerCase();

