@using System.Collections.Generic
@model dynamic

@{
    ViewData["Title"] = "Return Equipment";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <h2 class="fw-bold text-dark mb-2">Return Equipment</h2>
        <p class="text-muted">Return your borrowed equipment items</p>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-header bg-primary text-white py-2">
                            <h6 class="card-title mb-0 fw-semibold">@item.Name</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-2 small">
                                <div class="col-6">
                                    <span class="text-muted d-block">Label</span>
                                    <strong>@item.Label</strong>
                                </div>
                                <div class="col-6">
                                    <span class="text-muted d-block">Quantity</span>
                                    <strong>@item.Quantity</strong>
                                </div>
                                <div class="col-6">
                                    <span class="text-muted d-block">Type</span>
                                    <strong>@item.Type</strong>
                                </div>
                                <div class="col-6">
                                    <span class="text-muted d-block">Borrow Date</span>
                                    <strong>@item.BorrowDate.ToString("MMM dd, yyyy")</strong>
                                </div>
                                <div class="col-6">
                                    <span class="text-muted d-block">Expected Return</span>
                                    <strong>@item.ExpectedReturnDate.ToString("MMM dd, yyyy")</strong>
                                </div>
                            </div>

                            @{
                                var daysUntilDue = (item.ExpectedReturnDate - DateTime.Now).Days;
                                var isOverdue = DateTime.Now > item.ExpectedReturnDate;
                            }

                            <div class="mt-3">
                                @if (isOverdue)
                                {
                                    <div class="alert alert-danger py-2 mb-0 small">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        <strong>Overdue!</strong> @((DateTime.Now - item.ExpectedReturnDate).Days) day(s) late
                                    </div>
                                }
                                else if (daysUntilDue <= 2)
                                {
                                    <div class="alert alert-warning py-2 mb-0 small">
                                        <i class="bi bi-clock me-1"></i>
                                        Due in @daysUntilDue day(s)
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-success py-2 mb-0 small">
                                        <i class="bi bi-check-circle me-1"></i>
                                        On track
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-light border-0 py-2">
                            <form method="post" asp-action="ReturnEquipment">
                                <input type="hidden" name="BorrowID" value="@item.BorrowID" />
                                <button type="submit" class="btn btn-success btn-sm w-100">
                                    <i class="bi bi-arrow-return-left me-1"></i>Return Item
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-check-circle display-3 text-success mb-3"></i>
                <h4 class="mt-3 text-success fw-semibold">All Clear!</h4>
                <p class="text-muted mb-4">You have no equipment to return at the moment.</p>
                <a href="@Url.Action("BorrowEquipment")" class="btn btn-primary btn-sm">
                    <i class="bi bi-laptop me-2"></i>Borrow Equipment
                </a>
            </div>
        </div>
    }
</div>