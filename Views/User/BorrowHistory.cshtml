@using System.Collections.Generic
@model dynamic

@{
    ViewData["Title"] = "Borrowing History";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">Borrowing History</h2>
            <p class="text-muted">View your past equipment borrowing records</p>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Borrowing Records</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Equipment</th>
                                <th>Label</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Quantity</th>
                                <th>Purpose</th>
                                <th>Borrow Date</th>
                                <th>Expected Return</th>
                                <th>Actual Return</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@record.Name</td>
                                    <td>@record.Label</td>
                                    <td>@record.Category</td>
                                    <td>@record.Type</td>
                                    <td>@record.Quantity</td>
                                    <td>@record.Purpose</td>
                                    <td>@record.BorrowDate.ToString("MMM dd, yyyy")</td>
                                    <td>@record.ExpectedReturnDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (record.ReturnDate != null)
                                        {
                                            @(((DateTime)record.ReturnDate).ToString("MMM dd, yyyy"))
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.Status == "Borrowed")
                                        {
                                            <span class="badge bg-warning">Borrowed</span>
                                        }
                                        else if (record.Status == "Returned")
                                        {
                                            <span class="badge bg-success">Returned</span>
                                        }
                                        else if (record.Status == "Overdue")
                                        {
                                            <span class="badge bg-danger">Overdue</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-clock-history display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Borrowing History</h4>
                <p class="text-muted">You haven't borrowed any equipment yet.</p>
                <a href="@Url.Action("BorrowEquipment")" class="btn btn-primary mt-3">
                    <i class="bi bi-laptop me-1"></i>Borrow Equipment
                </a>
            </div>
        </div>
    }
</div>