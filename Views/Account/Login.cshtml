@{
    ViewData["Title"] = "Login";
    Layout = null; // Remove layout to prevent scroll
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BorrowIT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site-custom.css" asp-append-version="true" />
</head>
<body class="login-register-body">
    <div class="login-container">
        <!-- Left Side: Image -->
        <div class="login-image-side">
            <img src="~/images/Inventory_Bg.png" alt="Inventory Background" class="login-image" />
        </div>

        <!-- Right Side: Login Form -->
        <div class="login-form-side d-flex justify-content-center align-items-center">
            <div class="custom-card text-center fade-transition" style="width: 420px;">
                <!-- Logo/Title Area -->
                <div class="mb-4">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <i class="fas fa-laptop-code fa-3x" style="color: var(--yale-blue);"></i>
                    </div>
                    <h3 class="mb-2">Welcome to BorrowIT</h3>
                    <p class="text-muted small">Campus Equipment Inventory System</p>
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @Html.Raw(ViewBag.Message)
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @Html.Raw(ViewBag.Error)
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3 text-start">
                        <label class="form-label">
                            <i class="fas fa-user me-2" style="color: var(--powder-blue);"></i>Username
                        </label>
                        <input type="text" name="username" class="form-control" placeholder="Enter your username" required />
                    </div>

                    <div class="mb-3 text-start password-group">
                        <label class="form-label">
                            <i class="fas fa-lock me-2" style="color: var(--powder-blue);"></i>Password
                        </label>
                        <div class="password-input-container">
                            <input type="password" name="password" class="form-control password-input"
                                   placeholder="Enter your password" required id="passwordField" />
                            <button type="button" class="password-toggle" id="togglePassword" tabindex="-1">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>

                <div class="mt-4 pt-3" style="border-top: 2px solid var(--powder-blue);">
                    <p class="mb-2">
                        <small class="text-muted">Don't have an account yet?</small><br>
                        <a href="/Account/Register" class="fw-bold" id="registerLink">Create an Account</a>
                    </p>
                    <p class="mb-0">
                        <a href="/Account/ForgotPassword" class="text-decoration-none small">
                            <i class="fas fa-question-circle me-1"></i>Forgot your password?
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordField = document.getElementById('passwordField');
            const toggleIcon = document.getElementById('toggleIcon');
            const registerLink = document.getElementById('registerLink');

            // Password toggle functionality
            if (togglePassword && passwordField) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordField.setAttribute('type', type);

                    if (toggleIcon) {
                        toggleIcon.classList.toggle('fa-eye');
                        toggleIcon.classList.toggle('fa-eye-slash');
                    }
                });
            }

            // Add fade transition to register link
            if (registerLink) {
                registerLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    const href = this.href;

                    // Add fade out effect
                    document.querySelector('.custom-card').style.opacity = '0';
                    document.querySelector('.custom-card').style.transition = 'opacity 0.3s ease';

                    // Navigate after transition
                    setTimeout(function() {
                        window.location.href = href;
                    }, 300);
                });
            }
        });
    </script>
</body>
</html>