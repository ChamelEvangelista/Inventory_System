@model IEnumerable<Inventory_System.Models.Equipment>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Manage Equipment";
    ViewData["ActivePage"] = "ManageEquipment";
}

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid py-4 manage-equipment-page">
    <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap">
        <h2 class="h3 fw-bold" style="color: var(--yale-blue);"><i class="fas fa-boxes me-2"></i>Manage Inventory Items</h2>

        <form asp-action="ManageEquipment" method="get" class="d-flex align-items-center gap-2">
            <input type="text" name="searchQuery" value="@ViewBag.SearchQuery"
                   class="form-control" style="width: 350px; margin-left: 25px;"
                   placeholder="🔍 Search by name or label..." />

            <button type="submit" class="btn btn-primary" style="background-color: var(--yale-blue); border: none;">
                <i class="fas fa-search"></i> Search
            </button>
        </form>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 15px; border: 2px solid var(--powder-blue);">
        <div class="card-header text-white py-3"
             style="background: linear-gradient(135deg, var(--yale-blue) 0%, var(--deep-navy) 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-box-open me-2"></i>Item Inventory</h5>
                <a asp-action="AddEquipment" class="btn" style="background-color: var(--naples-yellow); color: var(--yale-blue); font-weight: 600;">
                    <i class="fas fa-plus-circle me-2"></i>Add New Item
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: var(--yale-blue);">
                        <tr>
                            <th class="text-black py-3 ps-4"><i class="fas fa-hashtag me-1"></i>ID</th>
                            <th class="text-black py-3"><i class="fas fa-tag me-1"></i>Name</th>
                            <th class="text-black py-3"><i class="fas fa-cube me-1"></i>Type</th>
                            <th class="text-black py-3"><i class="fas fa-tags me-1"></i>Label</th>
                            <th class="text-black py-3 text-center"><i class="fas fa-boxes me-1"></i>Quantity</th>
                            <th class="text-black py-3 text-center"><i class="fas fa-signal me-1"></i>Status</th>
                            <th class="text-black py-3 text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="ps-4 fw-bold" style="color: var(--yale-blue);">#@item.EquipmentID</td>
                                <td>@item.Name</td>
                                <td>@item.Type</td>
                                <td>
                                    @if (item.Label == "Borrowable")
                                    {
                                        <span class="badge bg-success">@item.Label</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Label</span>
                                    }
                                </td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-center">@item.Status</td>
                                <td class="text-center">
                                    <a asp-action="EditEquipment" asp-route-id="@item.EquipmentID" class="btn btn-sm btn-warning text-white">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a asp-action="DeleteEquipment" asp-route-id="@item.EquipmentID" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Delete @item.Name permanently?');">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
